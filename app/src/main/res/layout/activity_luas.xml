<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umbrella.catzy.mathfornoobies.Luas">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luas"
        android:textSize="14pt"/>

    <LinearLayout
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_weight="1"
                android:text="Persegi"
                android:textSize="10pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="btnpersegi"/>
            <Button
                android:layout_weight="1"
                android:text="Persegi Panjang"
                android:textSize="10pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="btnpersegip"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_weight="1"
                android:text="Segitiga"
                android:textSize="10pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="btnsegitiga"/>
            <Button
                android:layout_weight="1"
                android:text="Lingkaran"
                android:textSize="10pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="btnlingkaran"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
